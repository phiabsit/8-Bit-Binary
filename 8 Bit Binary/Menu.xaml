<Window x:Class="_8_Bit_Binary.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_Bit_Binary"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/175d7aac-b9af-492d-80f9-ace88b04cf1b.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="Start" HorizontalAlignment="Center" Height="66" VerticalAlignment="Top" Width="246" Margin="0,135,0,0" Background="{x:Null}" Foreground="#FFFAF7BD" FontFamily="Stencil" Click="StartGame_Click"/>
        <Button Content="About" HorizontalAlignment="Center" Height="65" Margin="0,206,0,0" VerticalAlignment="Top" Width="246" Background="{x:Null}" Foreground="#FFFAF7BD" FontFamily="Stencil" />
        <Button Content="Leaderboard" HorizontalAlignment="Center" Height="65" Margin="0,276,0,0" VerticalAlignment="Top" Width="246" Background="{x:Null}" Foreground="#FFFAF7BD" FontFamily="Stencil" Click="Leaderboards_Click" />
        <Label Content="DEC2BIN CHALLENGE" HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top" Foreground="#FFFAF7BD" FontSize="43" FontFamily="Stencil"/>


    </Grid>
</Window>
